@model IPagedList<ResidentViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> Create New</a>
</p>
<br />
@if (ViewBag.ViewMode == "card")
{
    <a href="@Url.Action("Index", new { viewMode = "list", pageIndex = ViewBag.PageIndex })" class="btn btn-primary">List view</a>
    <br />
    
    int count = 0;
    bool closeRow = false;
    
    foreach (var item in Model)
    {
        if (count % 4 == 0)
        {
            @:<div class="row">
            closeRow = true;
        }
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    @item.FullName
                </div>
                <img class="card-img-top resident-img" data-id="@item.Id" src="~/Content/Img/male-user-small_128x128.png" style="height: 180px; width: 100%; display: block;">
                <div class="card-block">
                    @*<h4 class="card-title">Special title treatment</h4>*@
                    <p class="card-text">@Html.DisplayNameFor(model => model.Code): @item.Code</p>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span>Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span>Delete</a>
                </div>
            </div>
        </div>
        if (count % 4 == 3)
        {
            @:</div >
            closeRow = false;
        }
        count++;
    }

    if (closeRow)
    {
        @:</div >
    }
}
else
{
    <a href="@Url.Action("Index", new { viewMode = "card", pageIndex = ViewBag.PageIndex })" class="btn btn-primary">Card view</a>
    <br />
    <div class="table-responsive">
        <table class="table" id="table-residents">
            <tr>
                <th>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Middle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        <img class="resident-img" data-id="@item.Id" style="height: 40px; width: 40px" src="~/Content/Img/male-user_32x32.png" />
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Middle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span>Edit</a> |
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span>Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
}

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, pageIndex => Url.Action("Index", new { viewMode = ViewBag.ViewMode, pageIndex = pageIndex }))

@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $(".resident-img").each(function () {
                var residentId = $(this).attr("data-id");
                var element = $(this);

                $.getJSON('http://localhost:16434/api/residents/' + residentId + '/photo')
                    .done(function (data) {
                        if (!jQuery.isEmptyObject(data)) {
                            element.attr("src", "data:image/png;base64," + data);
                        }
                    })
                    .fail(function (jqXHR, textStatus, err) {
                    });
            });
        });
    </script>


}
